@using ComX_0._0._2.Helpers
@{
    var articleHelper = new ArticleHelper();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/datepicker.css" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/trumbowyg.min.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css"/>
    <link href='http://fonts.googleapis.com/css?family=Amarante&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="@Url.Content("~/Scripts/trumbowyg.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/jssor.slider.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/jquery.pajinate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/packery.pkgd.min.js")"></script>
    <script src="@Url.Content("~/Scripts/imagesloaded.pkgd.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.jscroll.min.js")"></script>
    <meta name="description" content="The description of my page"/>
</head>
<body>
@Html.Partial("_NavBarTop")
<div class="sliderSection" style="background-color: #222; width: 100%;">
    <div id="jssor_1" style="background-color: #222; height: 300px; left: 0px; margin: 0 auto; overflow: hidden; position: relative; top: 0px; visibility: hidden; width: 600px;">
        <!-- Slides Container -->
        <div data-u="slides" style="cursor: default; height: 300px; left: 0px; overflow: hidden; position: relative; top: 0px; width: 600px;">
            <div data-u="loading" style="left: 0px; position: absolute; top: 0px;">
                <div style="display: block; filter: alpha(opacity=70); height: 100%; left: 0px; opacity: 0.7; position: absolute; top: 0px; width: 100%;"></div>
                <div style="background: url('~/Content/images/loading.gif') no-repeat center center; display: block; height: 100%; left: 0px; position: absolute; top: 0px; width: 100%;"></div>
            </div>
            @foreach (var item in articleHelper.GetLastArticles(5)) {
                <div data-p="112.50" style="display: none;">
                    <img u="image" src='@Url.Action("GetImage", "Articles", new {articleId = item.Id})'/>
                    <div data-u="caption" data-3d="1" style="background-color: #eb5100; background-color: rgba(235, 81, 0, 0.5); color: #ffffff; font-size: 20px; height: 30px; left: 30px; line-height: 30px; position: absolute; text-align: center; top: 320px; width: 350px;">@item.Name</div>
                </div>
            }
            <!-- Bullet Navigator -->
            <div data-u="navigator" class="jssorb01" style="bottom: 16px; right: 16px;">
                <div data-u="prototype" style="height: 12px; width: 12px;"></div>
            </div>
            <!-- Arrow Navigator -->
            <span data-u="arrowleft" class="jssora02l" style="height: 55px; left: 8px; top: 0px; width: 55px;" data-autocenter="2"></span>
            <span data-u="arrowright" class="jssora02r" style="height: 55px; right: 8px; top: 0px; width: 55px;" data-autocenter="2"></span>
        </div>
    </div>
</div>
<div class="container body-content bodyLayout">
    @RenderBody()
    <div class="push"></div>
</div>
@Html.Partial("_Footer")
</body>
</html>

