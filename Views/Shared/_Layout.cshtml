    <script src="@Url.Content("~/Scripts/jquery.fancybox.pack.js")"></script>
    <script src="@Url.Content("//cdn.tinymce.com/4/tinymce.min.js")"></script>
    @*<script src="@Url.Content("~/Scripts/bootstrap-combobox.js")"></script>*@
    @*<script src="@Url.Content("~/Scripts/jquery.slimscroll.min.js")"></script>*@
    <meta name="description" content="@ViewBag.Description"/>
    <meta name="og:image" content="@ViewBag.MetaImage"/>
</head>
<body>
    @*@Html.Partial("_NavBarTop")*@
    @Html.Partial("_TopLogoPanel")
    @if (!currentUrl.Contains("Configuration"))
    {
        <div class="container" style="padding-left: 0; padding-right: 0;">
            @Html.Partial("_TopNavigationMenu")
        </div>
    }
    <div class="elementsToPush">
        @*@if (!currentUrl.Contains("Account") && !currentUrl.Contains("Configuration") && !currentUrl.Contains("Details") && !currentUrl.Contains("Comment") && !currentUrl.Contains("Categories"))*@
        @if (currentUrl.EndsWith("localhost:56314/") || currentUrl.EndsWith("nekroplaza.pl/"))
        {
            <div class="container" style="padding-left: 0; padding-right: 0;">
                @Html.Action("_IndexSlider", "Articles")
            </div>
            <div class="indexExplicitInfo container" style="padding-left: 2em; padding-right: 2em; background-color: white; border-bottom: 1em solid #222;font-family: 'Amarante', sans-serif;text-align: justify">
                <div class="warningMessageLayout" style="width: 90%; margin-top: -1em; padding-right: 1em; float:left">
                    <h2 style="color: red;">Uważej!</h2>
                    <h4>
                        @generalHelper.GetSettings().JumboIndexText
                    </h4>
                </div>
                <div class="socialMessageLayout" style="width: 10%; float: right;">
                    <a target="_blank" href="https://www.facebook.com/nekroplaza/">
                        <img src='~/Content/images/fbk.png' style="float: left; width: 100%; height: auto; text-align: center; padding-top: 0.25em;" />
                    </a>
                </div>
            </div>
        }
        <div class="container body-content bodyLayout">
            @RenderBody()
            <div class="push"></div>
        </div>
    </div>
    <a href="javascript:" id="return-to-top"><i class="icon-chevron-up" style="border: none !important"></i></a>

    @Html.Partial("_Footer")
</body>
</html>
<script>
    // ===== Scroll to Top ==== 
    $(window).scroll(function() {
        if ($(this).scrollTop() >= 50) { // If page is scrolled more than 50px
            $('#return-to-top').fadeIn(200); // Fade in the arrow
        } else {
            $('#return-to-top').fadeOut(200); // Else fade out the arrow
        }
    });
    $('#return-to-top').click(function() { // When arrow is clicked
        $('body,html').animate({
            scrollTop: 0 // Scroll to top of body
        }, 500);
    });

