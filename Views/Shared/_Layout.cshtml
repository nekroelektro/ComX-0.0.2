@using ComX_0._0._2.Helpers
@{
    var generalHelper = new GeneralHelper();
    string currentUrl = Request.Url?.AbsoluteUri;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/CustomControls.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/datepicker.css" rel="stylesheet" type="text/css"/>
    <link href="~/Views/Shared/Styles/_Layout.css" rel="stylesheet" type="text/css" />
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/trumbowyg.min.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/slick-theme.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/slick.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/magnific-popup.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/horizontalMenu.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/jquery.fancybox.css")" rel="stylesheet" type="text/css"/>
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/Content/favNp.ico")"/>
    <link href='http://fonts.googleapis.com/css?family=Amarante&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Coda&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Krona+One&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Bangers" rel="stylesheet">
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="~/Views/Shared/Scripts/SharedLayout.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/trumbowyg.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/jssor.slider.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/jquery.pajinate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/packery.pkgd.min.js")"></script>
    <script src="@Url.Content("~/Scripts/imagesloaded.pkgd.min.js")"></script>
    <script src="@Url.Content("~/Scripts/slick.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.jscroll.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.magnific-popup.min.js")"></script>
    <script src="@Url.Content("~/Scripts/cbpHorizontalMenu.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.sticky.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.fancybox.pack.js")"></script>
    <script src="@Url.Content("//cdn.tinymce.com/4/tinymce.min.js")"></script>
    <meta name="description" content="@ViewBag.Description"/>
    <meta name="og:image" content="@ViewBag.MetaImage"/>
</head>
<body>
@Html.Partial("_TopLogoPanel")
@if (!currentUrl.Contains("Configuration")) {
    <div class="containerTop container">
        @Html.Partial("_TopNavigationMenu")
    </div>
}
<div class="elementsToPush">
    @if (currentUrl.EndsWith("localhost:56314/") || currentUrl.EndsWith("nekroplaza.pl/")) {
        <div class="containerMiddle container">
            @Html.Action("_IndexSlider", "Articles")
        </div>
        <div class="indexExplicitInfo container">
            <div class="warningMessageLayout">
                <h2 class="warningLayoutTitle">Uważej!</h2>
                <h4>
                    @generalHelper.GetSettings().JumboIndexText
                </h4>
            </div>
            <div class="socialMessageLayout">
                <a target="_blank" href="https://www.facebook.com/nekroplaza/">
                    <img src='~/Content/images/fbk.png'/>
                </a>
            </div>
        </div>
    }
    <div class="container body-content bodyLayout">
        @RenderBody()
        <div class="push"></div>
    </div>
</div>
<a href="javascript:" id="return-to-top"><i class="icon-chevron-up"></i></a>

@Html.Partial("_Footer")
</body>
</html>
<script>
    $('#return-to-top').click(function () { // When arrow is clicked
        $('body,html').animate({
            scrollTop: 0 // Scroll to top of body
        }, 500);
    });
</script>
