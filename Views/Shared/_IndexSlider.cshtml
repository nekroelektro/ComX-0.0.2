@using ComX_0._0._2.Helpers
@model ComX_0._0._2.Models.Articles
    @{
        var articleHelper = new ArticleHelper();
    }
<div class="sliderSection" style="background-color: #222; width: 90%; margin: 0 auto;">
    @foreach (var item in articleHelper.GetLastArticles(5))
    {
        <div class="slideElement" style="width: 300px;height:200px;width:90%">
            <img src='@Url.Action("GetImage", "Articles", new {articleId = item.Id})' style="max-width: 100%; text-align: center; margin: 0 auto;" />
            @*<div>@item.Name</div>*@
        </div>
    }
</div>


<script>
    jQuery(document).ready(function($) {
        //SLICK SLIDER
        $(".sliderSection").slick({
            dots: true,
            infinite: true,
            centerMode: true,
            slidesToShow: 3,
            slidesToScroll: 3
        });
    });
</script>