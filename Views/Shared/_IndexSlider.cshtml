@using ComX_0._0._2.Helpers
@model ComX_0._0._2.Views.Articles.Models.Articles
    @{
        var articleHelper = new ArticleHelper();
        var userHelper = new UserHelper();
        var generalHelper = new GeneralHelper();
        var lastArticles = articleHelper.GetLastArticles(7);
    }
<div class="sliderOne">
        @foreach (var item in lastArticles)
        {
            <div class="slideElementUpper">
                <a href="@HttpUtility.UrlDecode(Url.Action("Details", "Articles", new {@id = generalHelper.RemoveSpecialCharsFromString(item.Name)}))">
                    <div class="sliderLink">
                        <div class="sliderLeft">
                            <div class="sliderArticleDate">
                                <span class="glyphicon glyphicon-time" aria-hidden="true"></span> @item.DateCreated
                            </div>
                            <div class="sliderArticleCategories">
                                <p><span class="glyphicon glyphicon-tags" aria-hidden="true"></span> @articleHelper.GetCategoryById(item.CategoryId).Name,
                                    @articleHelper.GetSubCategoryById(item.SubCategoryId).Name</p>
                            </div>
                            <div class="sliderArticleAuthor">
                                <span class="glyphicon glyphicon-user" aria-hidden="true"></span> @userHelper.GetUserById(item.UserId).UserName
                            </div>
                            @if (item.Series != Guid.Empty && articleHelper.GetSeriesById(item.Series).Name != "Default") {
                                <div class="sliderArticleSeries">
                                    <h4 class="sliderArticleSeriesTitle">@articleHelper.GetSeriesById(item.Series).Name</h4>
                                </div>
                            }
                            <div class="sliderArticleTitle">
                                <h2 class="sliderArticleNameTitle">@item.Name</h2>
                            </div>
                            <hr class="sliderArticleLine"/>
                            <div class="sliderArticleIndexDescription">
                                <p>@Html.Raw(WebUtility.HtmlDecode(item.IndexDescription))</p>
                            </div>
                        </div>
                        <div class="imageOverlayColor"></div>
                        <div class="bannerPanelImageContainer">
                            <img src='@Url.Content(articleHelper.GetImageRelativePathByArticleId(item.Id))'/>
                        </div>
                        <div class="bannerPanelImageMain">
                            <img src='@Url.Content(articleHelper.GetImageRelativePathByArticleId(item.Id))'/>
                        </div>
                    </div>
                </a>
            </div>
                }
</div>
<div class="sliderSection">
    @foreach (var item in lastArticles)
    {
        <div class="slideElementDown">
            <img src='@Url.Content(articleHelper.GetImageRelativePathByArticleId(item.Id))'/>
        </div>
    }
</div>

@*SCRIPTS FOR VIEW*@
<script type="text/javascript" src="~/Views/Shared/Scripts/SharedIndexSlider.js"></script>
<link href="~/Views/Shared/Styles/_IndexSlider.css" rel="stylesheet" type="text/css" />