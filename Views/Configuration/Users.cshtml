@using ComX_0._0._2.Helpers
@using GridMvc.Html
@using GridMvc.Sorting
@model IEnumerable<ComX_0._0._2.Models.Users>
@{
    Layout = "~/Views/Configuration/_Configuration.cshtml";
    var userHelper = new UserHelper();
}

<button type="button" class="btn btn-success btn-m" onclick="location.href = '@Url.Action("Register", "Account")'">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add user
</button>

<div class="col-xs-12 center-block">
    @Html.Grid(Model).Named("userGrid").Columns(columns => {
        columns.Add(o => o.Id, true);
        columns.Add(x => x.UserName).SetWidth(500);
        columns.Add(x => x.Role).Titled("Role").RenderValueAs(x=>userHelper.GetAllRoles().First(o=>o.Id == x.Role).Name).Filterable(true).SetWidth(80);
        columns.Add(x => x.DateOfCreation).Titled("Date added").SortInitialDirection(GridSortDirection.Ascending).SetWidth(160);
    }).WithPaging(20).Sortable(true).Filterable(true)
</div>

<script>
    $(function () {
        pageGrids.userGrid.onRowSelect(function (e) {
            var rowUserId = e.row.Id;
            window.location.href = '@Url.Action("UserPanel", "Account")?userId=' + rowUserId;
        });
    });
</script>

