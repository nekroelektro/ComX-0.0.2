@model ComX_0._0._2.Views.Configuration.Models.SiteSettings
@{
    Layout = "~/Views/Configuration/_Configuration.cshtml";
}
<h3>Edycja ustawień strony:</h3>
@using (Html.BeginForm("SiteSettings", "Configuration", FormMethod.Post,
                                                    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Quote, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Quote, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quote, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Playlist, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Playlist, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Playlist, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.JumboIndexText, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.JumboIndexText, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.JumboIndexText, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox-inline">
                    <label>
                        @Html.CheckBoxFor(model => model.CommentsAvailable, new {@checked = "checked"}) Komentarze włączone
                    </label>
                </div>
            </div>
        </div>
        <hr/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox-inline">
                    <label>
                        @Html.CheckBoxFor(model => model.IsMaintenance, new { @checked = "" }) Strona w budowie
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

