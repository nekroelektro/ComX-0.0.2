@using ComX_0._0._2.Helpers
@using React.AspNet
@model ComX_0._0._2.Views.Articles.Models.DtoModels.EditDto

@{
    Layout = "~/Views/Articles/_Articles.cshtml";
    ViewBag.Title = "Edit";
    UserHelper userHelper = new UserHelper();
    bool panelActive = userHelper.IsSuperAdminUser(User) || (userHelper.IsAdminUser(User) && new Guid(userHelper.GetUserByName(Model.Document.UserId).Id) == userHelper.GetCurrentLoggedUserId());
}
@Html.AntiForgeryToken()
@Html.React("Edit", new {model=Model, isAdmin = panelActive})
@*SCRIPTS FOR VIEW*@
<script src="@Url.Content("//cdn.tinymce.com/4/tinymce.min.js")"></script>
<script type="text/javascript" src="~/Views/Articles/Scripts/ArticlesEditCreate.js"></script>
