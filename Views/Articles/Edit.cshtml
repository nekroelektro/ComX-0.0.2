@using System.Web.UI.WebControls
@using ComX_0._0._2.Helpers
@model ComX_0._0._2.Models.Articles

@{
    ViewBag.Title = "Edit";
    ArticleHelper articleHelper = new ArticleHelper();
    if (Model.Id == Guid.Empty) {
        Model.Id = ViewBag.ArticleId;
    }
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Articles", FormMethod.Post,
                                        new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.DateEdited, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateEdited, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
            </div>
        </div>
        <hr/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (articleHelper.GetImageByArticleId(Model.Id) != null)
        {
            <div class="form-group">
                @Html.Label("Uploaded main image", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="editImage" style="width: 90%;">
                        <img src='@Url.Content(articleHelper.GetImageRelativePathByArticleId(Model.Id))' style="max-width: 30%; text-align: center; margin: 0 auto;"/>
                    </div>
                    <div class="buttons">
                        <button type="button" class="btn btn-danger .btn-sm" onclick="location.href = '@Url.Action("DeleteImage", "Articles", new {articleId = Model.Id})'">
                            <span class="glyphicon glyphicon-remove-sign" aria-hidden="true" style="font-size: 1.1em"> Delete image</span>
                        </button>
                    </div>
                </div>
            </div>
                }
                else {
            <div class="form-group">
                @Html.Label("Upload image", new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    <input type="file" id="imgUp" name="upload"/>
                </div>
            </div>
            @Html.ValidationMessage("ImageUpload", new { @style = "color: red" })
        }
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Prelude, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10" style="margin-left: -0.5em; width: 33%">
                @Html.Custom_DivFor(model => model.Prelude, "form-control articleEditorTextAreaPrelude")
                @Html.ValidationMessageFor(model => model.Prelude, "", new {@class = "text-danger"})
            </div>
        </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="margin-left: -1.4em;">
                        @Html.Custom_DivFor(model => model.Body, "form-control articleEditorTextAreaBody")
                        @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DateCreated, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DateCreated, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                    </div>
                </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryId, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-lg-10">
                @Html.DropDownListFor(model => model.CategoryId, new List<SelectListItem>(ViewBag.CategoryList), new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.CategoryId, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox-inline">
                    <label>
                        @Html.CheckBoxFor(model => model.IsPublished, new { @checked = "checked" }) Publish article
                    </label>
                </div>
            </div>
        </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>
    var bodyValue = $('#Body').attr('value');
    var decodedBody = $('<textarea/>').html(bodyValue).text();
    $('.articleEditorTextAreaBody').trumbowyg();
    $('.articleEditorTextAreaBody').trumbowyg('html', decodedBody);

    var preludeValue = $('#Prelude').attr('value');
    var decodedPrelude = $('<textarea/>').html(preludeValue).text();
    $('.articleEditorTextAreaPrelude').trumbowyg();
    $('.articleEditorTextAreaPrelude').trumbowyg('html', decodedPrelude);
</script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
